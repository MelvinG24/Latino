#!/bin/bash
if [[ $1 ]]; then
  case $1 in
  "debug"|"Debug")
    tip="Debug" ;;
  "release"|"Release")
    tip="Release" ;;
  esac
  alias compilar='make clean; rm CMakeCache.txt; cmake -DCMAKE_BUILD_TYPE=${tip} -G "Unix Makefiles" .; make'
  alias instalar='sudo make install'
  alias tipo='echo ${tip}'
fi

